{
    "name": "feature-flags-demo",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "test": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest watch",
        "type-check": "tsc --noEmit",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint . --ext ts,tsx --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "bundle-size:check": "bundlesize",
        "validate:feature-flags": "node scripts/validate-feature-flags.js",
        "pr-check": "npm run type-check && npm run lint && npm run format:check && npm run test:coverage && npm run build && npm run validate:feature-flags"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-react": "^4.1.0",
        "@vitest/coverage-v8": "^0.34.6",
        "bundlesize": "^0.18.1",
        "eslint": "^8.45.0",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "prettier": "^3.0.0",
        "typescript": "^5.2.2",
        "vite": "^4.5.2",
        "vitest": "^0.34.6"
    },
    "bundlesize": [
        {
            "path": "./dist/assets/*.js",
            "maxSize": "150kb",
            "compression": "gzip"
        }
    ]
}
